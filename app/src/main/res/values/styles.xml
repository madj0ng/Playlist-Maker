<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TitleLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/title_padding</item>
    </style>

    <style name="TitleImage">
        <item name="android:layout_width">@dimen/title_image_width</item>
        <item name="android:layout_height">@dimen/title_image_height</item>
        <item name="android:layout_margin">@dimen/title_image_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="tint">@color/icon_color</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TitleText" parent="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/title_text_margin_start</item>
        <item name="android:layout_marginTop">@dimen/title_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/title_text_margin_bottom</item>
    </style>

    <style name="BodyLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/body_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/body_margin_vertical</item>
        <item name="android:layout_marginEnd">@dimen/body_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/body_margin_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonBlack">
        <item name="android:inset">@dimen/button_inset</item>
        <item name="android:backgroundTint">@color/button_black_bgrnd</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_black_text_color</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/button_black_txtsize</item>
        <item name="android:letterSpacing">@dimen/button_black_letterSpacing</item>
        <item name="cornerRadius">@dimen/button_black_radius</item>
    </style>

    <!--Стили начального окна-->
    <style name="MainBackground" parent="Background">
        <item name="android:background">@color/background_main</item>
    </style>

    <style name="MainTitleText" parent="TitleText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainBodyLine" parent="BodyLine">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:insetTop">@dimen/button_inset</item>
        <item name="android:insetBottom">@dimen/button_inset</item>
        <item name="android:layout_marginTop">@dimen/main_button_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/main_button_margin_vertical</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="iconTint">@color/color_black</item>
        <item name="tint">@color/color_black</item>
        <item name="iconGravity">textStart</item>
    </style>

    <!--Стили окна настроек-->
    <style name="SettingsBackground" parent="Background">
        <item name="android:background">@color/background_setting</item>
    </style>

    <style name="SettingsMenuLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/body_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/body_padding_vertical</item>
    </style>

    <style name="SettingsMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="SettingsMenuIcon" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">@dimen/settings_icon_size</item>
        <item name="android:layout_height">@dimen/settings_icon_size</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorSwitchThumbNormal">@android:color/white</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <!--Стили окна поиска-->
    <style name="SearchInputLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="SearchInputText">
        <item name="android:textSize">@dimen/search_input_text_size</item>
        <item name="android:textColorHint">@color/search_help_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/search_text</item>
        <item name="android:paddingStart">@dimen/search_input_text_start</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">255</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SearchInputIcon">
        <item name="android:layout_width">@dimen/search_input_icon_width</item>
        <item name="android:layout_height">@dimen/search_input_icon_height</item>
        <item name="iconTint">@color/search_help_icon</item>
        <item name="tint">@color/search_help_icon</item>
    </style>

    <style name="SearchInputIconStart" parent="SearchInputIcon">
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginStart">@dimen/search_input_icon_start</item>
    </style>

    <style name="SearchInputIconEnd" parent="SearchInputIcon">
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">@dimen/search_input_icon_start</item>
    </style>

    <style name="SearchHistoryTitle" parent="Title">
        <item name="android:textSize">@dimen/search_history_title_txtsize</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SearchTrackList">
        <item name="android:layout_marginStart">@dimen/body_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/body_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/body_margin_vertical</item>
    </style>

    <style name="SearchTrackLine">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SearchTrackImage">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SearchTrackLineTexts">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SearchTrackLineTextsUp">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/search_list_text_up</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_track_up_txtsize</item>
    </style>

    <style name="SearchTrackLineTextsDown">
        <item name="android:orientation">horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SearchTextDown">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/search_list_text_down</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_track_down_txtsize</item>
    </style>

    <style name="SearchTextSeparator">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:iconTint">@color/search_list_text_down</item>
        <item name="tint">@color/search_list_text_down</item>
    </style>

    <style name="SearchTrackDetail">
        <item name="android:iconTint">@color/search_list_text_down</item>
        <item name="tint">@color/search_list_text_down</item>
    </style>

    <style name="SearchErrText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/search_err_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_err_text_txtsize</item>
    </style>

</resources>