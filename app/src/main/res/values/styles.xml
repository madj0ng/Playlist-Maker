<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleImage">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="iconGravity">textStart</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@color/background_player</item>
        <item name="iconTint">@color/icon_color</item>
        <item name="tint">@color/icon_color</item>
    </style>

    <style name="FontDisplayMediumBlack">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FontDisplayRegularGray">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_color_gray</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="FontDisplayRegularBlack">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TitleText" parent="FontDisplayMediumBlack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="ButtonBlack">
        <item name="android:inset">@dimen/button_inset</item>
        <item name="android:backgroundTint">@color/button_black_bgrnd</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_black_text_color</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/button_black_txtsize</item>
        <item name="android:letterSpacing">@dimen/button_black_letterSpacing</item>
        <item name="cornerRadius">@dimen/button_black_radius</item>
    </style>

    <!--Стили окна настроек-->
    <style name="SettingsMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="SettingsMenuIcon" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">@dimen/settings_icon_size</item>
        <item name="android:layout_height">@dimen/settings_icon_size</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorSwitchThumbNormal">@android:color/white</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <!--Стили окна поиска-->
    <style name="SearchInputText">
        <item name="android:textSize">@dimen/search_input_text_size</item>
        <item name="android:textColorHint">@color/search_help_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/search_text</item>
        <item name="android:paddingStart">@dimen/search_input_text_start</item>
        <item name="android:background">@drawable/et_style</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">255</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="SearchInputIcon">
        <item name="android:layout_width">@dimen/search_input_icon_width</item>
        <item name="android:layout_height">@dimen/search_input_icon_height</item>
        <item name="iconTint">@color/search_help_icon</item>
        <item name="tint">@color/search_help_icon</item>
    </style>

    <style name="SearchInputIconStart" parent="SearchInputIcon">
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginStart">@dimen/search_input_icon_start</item>
    </style>

    <style name="SearchInputIconEnd" parent="SearchInputIcon">
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">@dimen/search_input_icon_start</item>
    </style>

    <style name="SearchHistoryTitle" parent="FontDisplayMediumBlack">
        <item name="android:textSize">@dimen/search_history_title_txtsize</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SearchTrackLine">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SearchTrackImage">
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SearchTrackLineTexts">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SearchTrackLineTextsUp">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/search_list_text_up</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_track_up_txtsize</item>
    </style>

    <style name="SearchTrackLineTextsDown">
        <item name="android:orientation">horizontal</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SearchTextDown">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/search_list_text_down</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_track_down_txtsize</item>
    </style>

    <style name="SearchTextSeparator">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:iconTint">@color/search_list_text_down</item>
        <item name="tint">@color/search_list_text_down</item>
    </style>

    <style name="SearchTrackDetail">
        <item name="android:iconTint">@color/search_list_text_down</item>
        <item name="tint">@color/search_list_text_down</item>
    </style>

    <style name="SearchErrText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/search_err_text</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/search_err_text_txtsize</item>
    </style>

    <!--Стили плеера-->
    <style name="PlayerTrackImage">
        <item name="android:background">@null</item>
        <item name="android:scaleType">centerCrop</item>
<!--        <item name="layout_constraintDimensionRatio">h,1:1</item>-->
    </style>

    <style name="PlayerTrackName" parent="FontDisplayMediumBlack">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="PlayerArtistName" parent="FontDisplayMediumBlack">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="PlayerPlayTime" parent="FontDisplayMediumBlack">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="PlayerTrackProperties" parent="FontDisplayRegularGray">
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginTop">@dimen/margin_16dp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="PlayerTrackPropertiesValue" parent="FontDisplayRegularBlack">
        <item name="android:textSize">@dimen/text_size_13sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginStart">@dimen/margin_8dp</item>
        <item name="layout_constrainedWidth">true</item>
    </style>

    <style name="PlayerTrackActionButton">
        <item name="android:backgroundTint">@color/background_player</item>
    </style>

    <style name="PlayerMessage" parent="FontDisplayRegularBlack">
        <item name="android:background">@color/button_black_bgrnd</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/player_message_color</item>
        <item name="android:paddingBottom">@dimen/margin_16dp</item>
        <item name="android:paddingTop">@dimen/margin_16dp</item>
        <item name="android:paddingStart">@dimen/margin_8dp</item>
        <item name="android:paddingEnd">@dimen/margin_8dp</item>
    </style>

    <style name="MediaTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabIndicatorColor">@color/text_color</item>
        <item name="tabBackground">@color/background_media</item>
        <item name="tabTextAppearance">@style/MediaTabTextAppearance</item>
    </style>

    <style name="MediaTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/background_main</item>
        <item name="backgroundTint">@color/background_main</item>
        <item name="itemIconTint">@color/bottom_colors</item>
        <item name="itemTextColor">@color/bottom_colors</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12sp</item>
    </style>

    <!--Стили окна добавление альбома-->
    <style name="AlbumEditText">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <!--        <item name="android:textColorHint">@color/search_help_text</item>-->
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:lineHeight">@dimen/line_height_18_75sp</item>
        <item name="android:maxLength">255</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:autofillHints">no</item>
        <item name="android:imeOptions">actionNone</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:inputType">textShortMessage|text</item>
<!--        <item name="android:background">@drawable/sl_input_album</item>-->
    </style>

    <style name="AlbumHintText">
        <item name="android:textSize">@dimen/text_size_12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/album_gray</item>
        <item name="android:lineHeight">@dimen/line_height_16sp</item>
        <item name="android:maxLength">255</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:background">@drawable/sh_album_hint_text</item>
    </style>

    <style name="AlbumAddButton">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:lineHeight">@dimen/line_height_18_75sp</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:background">@drawable/sl_add</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:enabled">false</item>
    </style>

    <style name="AlbumBottomSheetName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
    </style>

</resources>